<div id="medicamente_prescrise">
  <%= render @pacient.reteta %>
</div>
<%= simple_form_for [@pacient, @retetum] , :remote => true do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :data %>
    <%= f.input :cantitate %>
    <%= f.input :serie %>
    <%= f.input :medicamente_id do %>
      <%= select(:retetum, :medicamente_id, Medicamente.clase) %>
    <% end %>
  </div>
  <div class="pastile"><%= render 'pastile', :collection => @retetum.pastile %></div>
  <br />
  <div class="actions">
    <%= link_to 'Adauga medicamentu la reteta' %><br />
    <%= f.button :submit %>
    <%= link_to 'Tipareste reteta', new_pacient_retetum_path(@pacient, :format=> 'pdf') %>
  </div>
<% end %>
